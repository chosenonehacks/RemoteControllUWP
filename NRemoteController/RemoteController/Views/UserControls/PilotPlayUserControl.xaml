                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Name="ButtonBack"   RelativePanel.AlignTopWithPanel="True" HorizontalAlignment="Stretch">
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"  Glyph="&#xE100;"  />
                </Button>
                <Button Grid.Row="0" Grid.Column="1" Name="ButtonPlayPause"   RelativePanel.RightOf="ButtonBack" >
                    <StackPanel Orientation="Horizontal">
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"  Glyph="&#xE102;"  />
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"  Glyph="&#xE103;"  />
                    </StackPanel>
                </Button>
