                <Button Grid.Row="1" Grid.Column="0" Name="ButtonRec"  RelativePanel.Below="ButtonBack" Content="REC">
                    <!--<FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"  Glyph="&#xE12B;"  />-->
                </Button>
                <Button Grid.Row="1" Grid.Column="1" Name="ButtonStop" RelativePanel.RightOf="ButtonRec" RelativePanel.Below="ButtonBack" MinWidth="100" HorizontalAlignment="Stretch" Grid.ColumnSpan="2">
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"  Glyph="&#xE71A;"  />
                </Button>
